<%- include('partials/header') -%>

<main>
    <section class="feed">
        <% posts.forEach(post => { %>
            <article class="post">
                <div class="post-header">
                    <img src="<%= post.profilePic %>" alt="Pet" class="profile-pic">
                    <div class="post-info">
                        <h2 class="pet-name"><%= post.petName %></h2>
                        <p class="post-date"><%= post.date %></p>
                    </div>
                </div>
                <img src="<%= post.photo %>" alt="Pet Photo" class="post-photo">
                <div class="post-actions">
                    <button class="like-button">🐾 <%= post.likes %></button>
                    <button class="comment-button">💬 <%= post.comments %></button>
                    <button class="share-button">🔗 Share</button>
                </div>
            </article>
        <% }) %>
    </section>
</main>

<%- include('partials/footer') -%>
