<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Posts</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>All Posts</h1>
    <% if (posts.length > 0) { %>
        <% posts.forEach(post => { %>
            <div>
                <% if (post.petPhoto) { %>
                    <img src="<%= post.petPhoto %>" alt="Pet Photo">
                <% } %>
                <p><%= post.petDescription %></p>
            </div>
        <% }); %>
    <% } else { %>
        <p>No posts available</p>
    <% } %>
</body>
</html>
